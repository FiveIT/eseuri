{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "routify -c dev-vite",
    "dev:windows": "run-p open dev",
    "prebuild": "[ $CI = true ] && npx pnpm install --store=../node_modules/.pnpm-store || echo 'skipping pnpm install'",
    "build": "routify -b && vite build && node br.cjs",
    "dev-vite": "vite",
    "serve-vite": "vite preview",
    "open": "start http://localhost:3000",
    "validate": "eslint --fix src && routify -b && svelte-check src",
    "format": "prettier --plugin-search-dir=. -w src",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests src",
    "test:watch": "npm t -- --watch",
    "e2e": "cypress open"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@jest/globals": "^26.6.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@roxi/routify": "^2.15.1",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.7",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^1.0.10",
    "@types/brotli": "^1.3.0",
    "@types/glob": "^7.1.3",
    "@types/html-minifier": "^4.0.0",
    "@types/jest": "^26.0.22",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "brotli": "^1.3.2",
    "eslint": "^7.24.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-svelte3": "^3.1.2",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "jest": "^27.0.0-next.8",
    "npm-run-all": "^4.1.5",
    "open": "^8.0.6",
    "postcss": "^8.2.10",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "svelte": "^3.37.0",
    "svelte-check": "^1.4.0",
    "svelte-jester": "^1.4.0",
    "svelte-preprocess": "^4.7.0",
    "tailwindcss": "^2.1.1",
    "ts-jest": "^27.0.0-next.11",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "vite": "^2.1.5",
    "vite-plugin-windicss": "^0.10.4",
    "windicss": "^2.5.14"
  },
  "dependencies": {
    "@tmaxmax/renderless-svelte": "^1.5.0",
    "@tmaxmax/svelte-auth0": "^1.0.2",
    "svelte-material-icons": "^1.0.3"
  },
  "type": "module",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": "svelte.config.cjs"
        }
      ],
      "^.+\\.[jt]s$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
